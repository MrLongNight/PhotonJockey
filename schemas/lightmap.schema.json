{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://lightbeat.wunderlich.pw/schemas/lightmap.schema.json",
  "title": "Light Map Configuration",
  "description": "Schema for light bridge and light configuration mapping",
  "type": "object",
  "properties": {
    "bridges": {
      "type": "array",
      "description": "List of bridge configurations",
      "items": {
        "$ref": "#/definitions/bridge"
      }
    },
    "lights": {
      "type": "array",
      "description": "List of light configurations",
      "items": {
        "$ref": "#/definitions/light"
      }
    }
  },
  "required": ["lights"],
  "definitions": {
    "bridge": {
      "type": "object",
      "description": "Bridge configuration",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the bridge",
          "minLength": 1
        },
        "ip": {
          "type": "string",
          "description": "IP address of the bridge",
          "pattern": "^((25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.){3}(25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)$"
        }
      },
      "required": ["id", "ip"],
      "additionalProperties": false
    },
    "light": {
      "type": "object",
      "description": "Light configuration",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the light",
          "minLength": 1
        },
        "x": {
          "type": "number",
          "description": "X coordinate in the light layout"
        },
        "y": {
          "type": "number",
          "description": "Y coordinate in the light layout"
        },
        "bridgeId": {
          "type": "string",
          "description": "ID of the bridge this light is connected to",
          "minLength": 1
        },
        "controlType": {
          "type": "string",
          "description": "Control type for this light",
          "enum": ["FAST_UDP", "LOW_HTTP"]
        }
      },
      "required": ["id", "controlType"],
      "additionalProperties": false
    }
  }
}
