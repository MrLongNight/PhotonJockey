<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="io.github.mrlongnight.photonjockey.ui.AudioAnalyzerDashboardController"
            prefHeight="700.0" prefWidth="1000.0" style="-fx-background-color: #1e1e1e;">
    
    <top>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            
            <!-- Control Panel -->
            <HBox spacing="20" alignment="CENTER_LEFT" style="-fx-background-color: #2b2b2b; -fx-padding: 10;">
                <!-- Audio Device Selection -->
                <Label text="Audio Device:" style="-fx-text-fill: #ffffff; -fx-font-size: 12px;"/>
                <ComboBox fx:id="audioDeviceComboBox" prefWidth="250" promptText="Select Audio Device"/>
                <Button fx:id="refreshDevicesButton" text="Refresh" onAction="#onRefreshDevices"/>
                
                <Separator orientation="VERTICAL"/>
                
                <!-- Hue Controls -->
                <Label text="Hue Bridge:" style="-fx-text-fill: #ffffff; -fx-font-size: 12px;"/>
                <Label fx:id="hueStatusLabel" text="Not Connected" style="-fx-text-fill: #cccccc; -fx-font-size: 12px;"/>
                <Button fx:id="connectHueButton" text="Connect" onAction="#onConnectHue"/>
                <Button fx:id="disconnectHueButton" text="Disconnect" onAction="#onDisconnectHue" disable="true"/>
            </HBox>
            
            <Separator/>
            
            <!-- Waveform View -->
            <Label text="Waveform" style="-fx-text-fill: #ffffff; -fx-font-size: 14px; -fx-font-weight: bold;"/>
            <Canvas fx:id="waveformCanvas" width="980" height="120" 
                    style="-fx-border-color: #444444; -fx-border-width: 1;"/>
            
            <!-- Frequency Spectrum -->
            <Label text="Frequency Spectrum" style="-fx-text-fill: #ffffff; -fx-font-size: 14px; -fx-font-weight: bold;"/>
            <Canvas fx:id="spectrumCanvas" width="980" height="120" 
                    style="-fx-border-color: #444444; -fx-border-width: 1;"/>
        </VBox>
    </top>
    
    <center>
        <VBox alignment="CENTER" spacing="20">
            <padding>
                <Insets top="20" right="10" bottom="20" left="10"/>
            </padding>
            
            <!-- Beat Indicator -->
            <VBox alignment="CENTER" spacing="10">
                <Label text="Beat Indicator" style="-fx-text-fill: #ffffff; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                <Circle fx:id="beatIndicator" radius="40" fill="#2b2b2b" 
                        stroke="#555555" strokeWidth="2"/>
                <Label fx:id="bpmLabel" text="BPM: 0.0" style="-fx-text-fill: #ffffff; -fx-font-size: 12px;"/>
            </VBox>
            
            <!-- Status Information -->
            <VBox alignment="CENTER" spacing="5">
                <Label fx:id="statusLabel" text="Status: Idle" 
                       style="-fx-text-fill: #aaaaaa; -fx-font-size: 11px;"/>
                <Label fx:id="infoLabel" text="" 
                       style="-fx-text-fill: #888888; -fx-font-size: 10px;"/>
            </VBox>
        </VBox>
    </center>
    
    <bottom>
        <VBox spacing="15" style="-fx-background-color: #2b2b2b;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            
            <!-- Gain Slider -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Gain:" minWidth="120" style="-fx-text-fill: #ffffff; -fx-font-size: 12px;"/>
                <Slider fx:id="gainSlider" min="0.0" max="2.0" value="1.0" 
                        prefWidth="400" showTickMarks="true" showTickLabels="false"
                        majorTickUnit="0.5" minorTickCount="4" blockIncrement="0.1"/>
                <Label fx:id="gainValueLabel" text="1.00" minWidth="50" 
                       style="-fx-text-fill: #ffffff; -fx-font-size: 12px;"/>
            </HBox>
            
            <!-- Beat Sensitivity Slider -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Beat Sensitivity:" minWidth="120" style="-fx-text-fill: #ffffff; -fx-font-size: 12px;"/>
                <Slider fx:id="beatSensitivitySlider" min="0.5" max="2.0" value="1.3" 
                        prefWidth="400" showTickMarks="true" showTickLabels="false"
                        majorTickUnit="0.5" minorTickCount="4" blockIncrement="0.1"/>
                <Label fx:id="beatSensitivityValueLabel" text="1.30" minWidth="50" 
                       style="-fx-text-fill: #ffffff; -fx-font-size: 12px;"/>
            </HBox>
        </VBox>
    </bottom>
    
</BorderPane>
