<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="pw.wunderlich.lightbeat.ui.AudioDashboardController"
            prefWidth="800.0" prefHeight="600.0">
    
    <top>
        <VBox spacing="10" style="-fx-padding: 10;">
            <Label text="Audio Dashboard" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        </VBox>
    </top>
    
    <center>
        <VBox spacing="15" style="-fx-padding: 10;">
            
            <!-- Waveform View -->
            <VBox spacing="5">
                <Label text="Waveform (Last N ms):" style="-fx-font-weight: bold;"/>
                <Canvas fx:id="waveformCanvas" width="760" height="150"/>
            </VBox>
            
            <!-- Spectrum Bars -->
            <VBox spacing="5">
                <Label text="Frequency Spectrum:" style="-fx-font-weight: bold;"/>
                <Canvas fx:id="spectrumCanvas" width="760" height="200"/>
            </VBox>
            
            <!-- Beat Indicator -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Beat Detected:" style="-fx-font-weight: bold;"/>
                <Label fx:id="beatIndicator" text="NO" 
                       style="-fx-background-color: #cccccc; -fx-padding: 5 15; -fx-font-weight: bold;"/>
                <Label text="BPM:"/>
                <Label fx:id="bpmLabel" text="0.0" style="-fx-font-weight: bold;"/>
            </HBox>
            
        </VBox>
    </center>
    
    <bottom>
        <VBox spacing="10" style="-fx-padding: 10; -fx-border-color: #cccccc; -fx-border-width: 1 0 0 0;">
            
            <!-- Controls Title -->
            <Label text="Audio Processing Controls" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
            
            <!-- FFT Size Slider -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="FFT Size:" minWidth="100"/>
                <Slider fx:id="fftSizeSlider" min="7" max="13" value="11" 
                        majorTickUnit="1" minorTickCount="0" snapToTicks="true" 
                        showTickLabels="true" showTickMarks="true" prefWidth="300"/>
                <Label fx:id="fftSizeLabel" text="2048" minWidth="60"/>
            </HBox>
            
            <!-- Smoothing Slider -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Smoothing:" minWidth="100"/>
                <Slider fx:id="smoothingSlider" min="0.0" max="1.0" value="0.5" 
                        majorTickUnit="0.25" minorTickCount="4" snapToTicks="false" 
                        showTickLabels="true" showTickMarks="true" prefWidth="300"/>
                <Label fx:id="smoothingLabel" text="0.50" minWidth="60"/>
            </HBox>
            
            <!-- Gain Slider -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Gain:" minWidth="100"/>
                <Slider fx:id="gainSlider" min="0.1" max="5.0" value="1.0" 
                        majorTickUnit="1.0" minorTickCount="9" snapToTicks="false" 
                        showTickLabels="true" showTickMarks="true" prefWidth="300"/>
                <Label fx:id="gainLabel" text="1.00" minWidth="60"/>
            </HBox>
            
            <!-- Preset Dropdown -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Preset:" minWidth="100"/>
                <ComboBox fx:id="presetComboBox" prefWidth="300">
                    <items>
                        <javafx.collections.FXCollections fx:factory="observableArrayList">
                            <String fx:value="Default"/>
                            <String fx:value="High Sensitivity"/>
                            <String fx:value="Low Sensitivity"/>
                            <String fx:value="Bass Focus"/>
                            <String fx:value="Treble Focus"/>
                        </javafx.collections.FXCollections>
                    </items>
                    <value>
                        <String fx:value="Default"/>
                    </value>
                </ComboBox>
            </HBox>
            
        </VBox>
    </bottom>
    
</BorderPane>
